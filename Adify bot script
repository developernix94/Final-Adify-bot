    .notice { background:#fff4e6; border:1px solid #ffe3b8; padding:10px; border-radius:8px; color:#7a4b00; }
    .danger { background:#ffecec; border:1px solid #ffb3b3; padding:10px; border-radius:8px; color:#7a1b1b; }
    .success { background:#ecfdf5; border:1px solid #bbf7d0; padding:10px; border-radius:8px; color:#065f46; }
